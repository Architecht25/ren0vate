<div class="container my-5">
  <div class="card shadow-sm">
    <div class="card-body">
      <h1 class="card-title h3 mb-4"><i class="bi bi-award me-2"></i><%= @prime.titre %></h1>

      <dl class="row mb-4">
        <dt class="col-sm-4 text-muted">Région</dt>
        <dd class="col-sm-8"><%= @prime.region.capitalize %></dd>

        <dt class="col-sm-4 text-muted">Slug</dt>
        <dd class="col-sm-8"><%= @prime.slug %></dd>

        <dt class="col-sm-4 text-muted">Unité</dt>
        <dd class="col-sm-8"><%= @prime.unite %></dd>

        <dt class="col-sm-4 text-muted">Type de valeur</dt>
        <dd class="col-sm-8"><%= @prime.type_de_valeur %></dd>

        <dt class="col-sm-4 text-muted">Catégories d'éligibilité</dt>
        <dd class="col-sm-8"><%= @prime.eligible_categories %></dd>

        <dt class="col-sm-4 text-muted">Valeur par catégorie</dt>
        <dd class="col-sm-8">

              <% @prime.valeurs_par_categorie.each do |categorie_code, data| %>
                <div class="mb-3">
                  <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                      <h6>Catégorie <%= categorie_code %></h6>
                        <ul>
                          <% data.each do |key, value| %>
                            <li><strong><%= key.humanize %>:</strong> <%= value %></li>
                          <% end %>
                        </ul>
                    </div>
                  </div>
                </div>
              <% end %>
        </dd>
      </dl>

      <hr>

      <h5 class="text-primary">Conditions</h5>
      <p><%= @prime.condition %></p>

      <h5 class="text-primary">Conseils</h5>
      <p><%= @prime.conseil %></p>

      <h5 class="text-primary">Documents requis</h5>
      <p><%= @prime.document %></p>

      <h5 class="text-primary">Informations spécifiques</h5>
      <p><%= @prime.specifique %></p>

      <% if @prime.image.present? %>
        <div class="text-center my-4">
          <img src="/<%= @prime.image %>" alt="<%= @prime.titre %>" class="img-fluid rounded shadow-sm" />
        </div>
      <% end %>
    </div>
  </div>

  <div class="d-flex justify-content-center gap-3 mt-4">
    <%= link_to "← Retour à la liste", primes_path, class: "btn btn-outline-secondary" %>
    <%= link_to "Accueil", root_path, class: "btn btn-outline-primary" %>
  </div>
</div>
