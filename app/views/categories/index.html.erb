<div class="container mt-5">
  <h1 class="mb-4">Catégories de revenus</h1>

  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-md-6">
        <div class="card mb-4 shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= category.description %></h5>
            <p class="card-text">
              Code : <strong><%= category.code %></strong><br>
              Seuil seul : <%= number_with_delimiter(category.seuil_seul) %> €<br>
              Seuil avec charge : <%= number_with_delimiter(category.seuil_seul_avec_charge) %> €<br>
              + <%= number_with_delimiter(category.increment_par_personne) %> € par personne en plus
            </p>
            <%= link_to "Détails", category_path(category), class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="d-flex justify-content-center gap-3 mt-4">
    <%= link_to "← Retour à l'accueil", root_path, class: "btn btn-outline-secondary" %>
  </div>
